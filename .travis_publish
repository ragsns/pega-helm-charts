#!/bin/bash
PUBLICATION_BRANCH=gh-pages
# Checkout the branch
REPO_PATH=$PWD
pushd $HOME
git clone --branch=$PUBLICATION_BRANCH    https://${GITHUB_TOKEN}@github.com/$TRAVIS_REPO_SLUG publish 2>&1 > /dev/null
cd publish
# Update pages
cp -r $REPO_PATH/ .
cp ../build/ragsns/pega-helm-charts/index.yaml .
cp ../build/ragsns/pega-helm-charts/*.tgz .
echo echoing values
echo $HOME
ls -l $HOME
ls -lR $HOME/build
echo $REPO_PATH
pwd
ls -la
# Commit and push latest version
git add .
git config user.name  "Travis"
git config user.email "travis@travis-ci.org"
git commit -m "Updated distribution."
git push -fq origin $PUBLICATION_BRANCH 2>&1 > /dev/null
popd
